<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.VisualizarHistoriaSocialFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloHistoriaSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/margin10"
            android:text="TÃ­tulo"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textoHistoriaSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_margin="@dimen/margin10"
            android:text="Texto"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp" />

        <GridLayout
            android:id="@+id/imagemPricipal"
            android:layout_width="match_parent"
            android:layout_height="414dp"
            android:layout_margin="@dimen/margin10"
            android:background="@color/cinza"
            android:columnCount="1"
            android:gravity="center"
            android:rowCount="1" />

        <TextView
            android:id="@+id/textoImgHistoriaSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin8"
            android:text="Texto Imagem selecionada"
            android:textAlignment="center"
            android:textColor="@color/secondaryColor"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/anterior"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_new_24" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/proximo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>