<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EditarHistoriaSocialFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layoutHistoriaSocialEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin8"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/uploadEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_cloud_upload_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSeqHistoriaSocialEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLength="100"
            app:boxBackgroundColor="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtSeqHistoriaSocialEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/seqHistoria"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutSeqHistoriaSocialURLEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLength="100"
            app:boxBackgroundColor="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtSeqHistoriaSocialURLEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/urlHistoria"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTituloHistoriaSocialEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLength="100"
            app:boxBackgroundColor="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTituloHistoriaSocialEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/tituloHistoria"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutTextoHistoriaSocialEdit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLength="100"
            app:boxBackgroundColor="@null">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtTextoHistoriaSocialEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/textoHistoria"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnEditar"
            android:layout_margin="@dimen/margin8"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>